<!DOCTYPE html>
<html>
  <head>
    <title>Purrpurr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap 5 (обновлено, без jQuery) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body class="bg-light">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">МурМур</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">

            <li class="nav-item">
              <a class="nav-link" href="/">Все посты</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/posts/dogs">Собачки</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/posts/cats">Котики</a>
            </li>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                Маленькие животные
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/posts/hamsters">Хомячки</a></li>
                <li><a class="dropdown-item" href="/posts/rabbits">Кролики</a></li>
                <li><a class="dropdown-item" href="/posts/turtles">Черепашки</a></li>
              </ul>
            </li>

          </ul>

          <!-- AUTH BUTTONS (можно заменить позже на real login) -->
          <div class="d-flex gap-2">
            <a href="#" class="btn btn-outline-primary">Регистрация</a>
            <a href="#" class="btn btn-primary">Войти</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Контент -->
    <div class="container mb-5">
      <div class="row">
        <div class="col-md-8">
          <%= yield %>
        </div>

        <!-- Правая колонка (минимальная, без мусора) -->
        <div class="col-md-4">

          <div class="card mb-4 shadow-sm">
            <div class="card-header fw-bold">Поиск</div>
            <div class="card-body">
              <input type="text" placeholder="Поиск..." class="form-control">
            </div>
          </div>

          <div class="card mb-4 shadow-sm">
            <div class="card-header fw-bold">Разделы</div>
            <div class="card-body">
              <ul class="list-unstyled">
                <li><a href="/" class="text-decoration-none">Все посты</a></li>
                <li><a href="/posts/cats" class="text-decoration-none">Котики</a></li>
                <li><a href="/posts/dogs" class="text-decoration-none">Собаки</a></li>
                <li><a href="/posts/rabbits" class="text-decoration-none">Кролики</a></li>
              </ul>
            </div>
          </div>

        </div>
      </div>
    </div>

  </body>
</html>
